<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FunGallery" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!-- App Bar color. -->
        <item name="colorPrimary">@color/black</item>
        <!-- Status Bar color-->
        <item name="colorPrimaryVariant">@color/black</item>
        <!-- Text color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!-- Loader or cursor color. -->
        <item name="colorSecondary">@color/loader_cursor</item>
        <item name="colorSecondaryVariant">@color/loader_cursor_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
                <item name="android:windowBackground">@color/black</item>
<!--        <item name="android:textColor">@color/white</item>-->

    </style>

    <style name="DialogBox">
        <item name="android:windowBackground">@color/transparent_black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="backgroundColor">@color/transparent_black</item>

        <item name="android:windowMinWidthMajor">90%</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>

    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <style name="ThemeOverlay.FunGallery.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>

    <color name="transparent_black">#A8000000</color>

    <style name="BoxImage">
        <item name="android:background">@color/dark_appbar</item>
    </style>
</resources>